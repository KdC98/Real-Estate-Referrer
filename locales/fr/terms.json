    { id: 'responsabilite', key: 'toc.items.responsabilite' },
    { id: 'donnees', key: 'toc.items.donnees' },
    { id: 'loi', key: 'toc.items.loi' },
    { id: 'modifications', key: 'toc.items.modifications' },
    { id: 'contact', key: 'toc.items.contact' }
  ];

  tocNav.innerHTML = items.map(item => `
    <a href="#${item.id}" class="toc-link block text-sm text-gray-600 hover:text-[#1e3a8a] py-2 px-3 rounded border-l-3 border-transparent">
      ${t(item.key)}
